<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sma="clr-namespace:SuperMemoAssistant.Interop.SuperMemo.Content.Layout.XamlControls"
    Margin="100 100 120 300">
    <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
    
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    
    <sma:AutoGrid x:Name="TextContents"
                  Grid.Row="0"
                  Grid.Column="0"
                  sma:Container.AcceptedContent="Text" />
    
    <sma:AutoGrid x:Name="ImageContents"
                  Grid.Row="0"
                  Grid.Column="1"
                  sma:Container.AcceptedContent="Image" />
    
    <sma:AutoGrid x:Name="SoundContents"
                  Grid.Row="1"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  sma:Container.AcceptedContent="Sound" />
</Grid>